{
  "name": "wpdiggerstudio/wpzylos-core",
  "description": "Core foundation for WPZylos framework - PluginContext, Application, ServiceProvider, and base utilities for building WordPress plugins",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "wordpress",
    "wpzylos",
    "plugin",
    "framework",
    "mvc",
    "service-provider",
    "dependency-injection",
    "application"
  ],
  "homepage": "https://github.com/WPDiggerStudio/wpzylos-core",
  "authors": [
    {
      "name": "WPDiggerStudio",
      "email": "diggerwp@gmail.com",
      "homepage": "https://github.com/WPDiggerStudio",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/WPDiggerStudio/wpzylos-core/issues",
    "source": "https://github.com/WPDiggerStudio/wpzylos-core",
    "docs": "https://wpzylos.com/docs/latest/packages/wpzylos-core"
  },
  "require": {
    "php": "^8.0",
    "ext-fileinfo": "*",
    "ext-intl": "*",
    "ext-mbstring": "*",
    "psr/container": "^2.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6 || ^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "WPZylos\\Framework\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPZylos\\Framework\\Core\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyze",
    "cs": "phpcs --standard=PSR12 src",
    "cs-fix": "phpcbf --standard=PSR12 src",
    "qa": ["@cs", "@analyze", "@test"]
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.0.2"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "funding": [
    {
      "type": "paypal",
      "url": "https://www.paypal.com/donate/?hosted_button_id=66U4L3HG4TLCC"
    }
  ]
}